{
  "name": "root",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "----": "============================ui=============================",
    "watch": "npm run-script watch --workspace @fairys/taro-tools-react",
    "build": "npm run-script build --workspace @fairys/taro-tools-react",
    "-----": "============================plugins=============================",
    "watch:plugins": "npm run-script watch --workspace @fairys/taro-tools-plugins",
    "build:plugins": "npm run-script build --workspace @fairys/taro-tools-plugins",
    "---------": "============================form-ui=============================",
    "watch:form:ui": "npm run-script watch --workspace @fairys/taro-tools-simple-form-ui",
    "build:form:ui": "npm run-script build --workspace @fairys/taro-tools-simple-form-ui",
    "--------": "============================form=============================",
    "watch:form": "npm run-script watch --workspace @fairys/taro-tools-simple-form",
    "build:form": "npm run-script build --workspace @fairys/taro-tools-simple-form",
    "-------": "============================docs=============================",
    "build:docs": "npm run-script build --workspace docs",
    "docs": "npm run-script dev --workspace docs",
    "build:all": "npm run build:plugins && npm run build:form:ui && npm run build && npm run build:form",
    "version": "lerna version --force-publish=* --no-changelog --no-git-tag-version --no-push",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\""
  },
  "dependencies": {
    "@carefrees/rslib": "~0.1.0",
    "husky": "~9.1.7",
    "lerna": "~8.2.3",
    "prettier": "~2.7.0",
    "pretty-quick": "~4.2.2",
    "lint-staged": "~16.1.4",
    "typescript": "~5.9.2",
    "unocss": "~66.5.9",
    "@unocss/postcss": "~66.5.9",
    "@unocss/preset-rem-to-px": "~66.5.9"
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts,less,md,json}": "prettier --write"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ]
}