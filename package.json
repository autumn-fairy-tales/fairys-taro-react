{
  "name": "root",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "----": "============================ui=============================",
    "watch": "npm run-script watch --workspace @fairys/taro-tools-react",
    "build": "npm run-script build --workspace @fairys/taro-tools-react",
    "====": "==================================plugins=================================",
    "build:all": "npm run build",
    "version": "lerna version --force-publish=* --no-changelog --no-git-tag-version --no-push",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\""
  },
  "dependencies": {
    "@carefrees/rslib": "~0.0.12",
    "husky": "~9.1.7",
    "lerna": "~8.2.3",
    "prettier": "~2.7.0",
    "pretty-quick": "~4.2.2",
    "lint-staged": "~16.1.4",
    "typescript": "~5.9.2",
    "@tailwindcss/postcss": "~4.1.11",
    "tailwindcss": "~4.1.11"
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts,less,md,json}": "prettier --write"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}